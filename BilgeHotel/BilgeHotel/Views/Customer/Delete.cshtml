@model BilgeHotel.Models.Customer

@{
    ViewData["Title"] = "Müşteri Sil";
}

<h2>Müşteri Sil</h2>

<h3>Bu müşteriyi silmek istediğinizden emin misiniz?</h3>
<div>
    <h4>@Model.FullName</h4>
    <dl class="row">
        <dt class="col-sm-2">Telefon</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>

        <dt class="col-sm-2">E-posta</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Pasaport</dt>
        <dd class="col-sm-10">@Model.Password</dd>

        <dt class="col-sm-2">Adres</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Kimlik No</dt>
        <dd class="col-sm-10">@Model.IdentificationNumber</dd>

        <dt class="col-sm-2">Doğum Tarihi</dt>
        <dd class="col-sm-10">@Model.DateOfBirth.ToShortDateString()</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Sil</button>
        <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
    </form>
</div>
