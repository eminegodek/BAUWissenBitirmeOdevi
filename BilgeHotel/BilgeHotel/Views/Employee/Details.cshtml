@model Employee

<h2>Çalışan Detayları</h2>

<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Position</dt>
        <dd class="col-sm-10">@Model.Position</dd>

        <dt class="col-sm-2">Phone Number</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>

        <dt class="col-sm-2">Monthly Salary</dt>
        <dd class="col-sm-10">@Model.MonthlySalary</dd>
    </dl>
</div>

<a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
