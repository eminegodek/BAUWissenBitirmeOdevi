@model List<Employee>

<h2>Çalışan Listesi</h2>
<a asp-action="Create" class="btn btn-primary">Yeni Çalışan Ekle</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Position</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Hourly Rate</th>
            <th>Monthly Salary</th> 
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Position</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Email</td>
                <td>@item.HourlyRate</td>
                <td>@item.MonthlySalary</td> 
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Detay</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
